{
  "env": {
    "MONGO_DATABASE_URL": "@mongo-url",
    "MONGO_DATABASE_NAME": "@mongo-db-name"
  },
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    },
    { "src": "api/**/*.ts", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "handle": "filesystem" },
    { "src": "/.*", "status": 404, "dest": "/404" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
